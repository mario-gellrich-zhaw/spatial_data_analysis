{
	"name": "Python 3.11 with Jupyter and PDF Preview",
	"image": "mcr.microsoft.com/devcontainers/python:3.11",

	"customizations": {
		"vscode": {
		"extensions": [
			"ms-python.python",
			"ms-toolsai.jupyter",
			"ms-azuretools.vscode-docker",
			"ms-python.autopep8",
			"ms-python.pylint",
			"analytic-signal.preview-pdf",
			"grapecity.gc-excelviewer",
			"github.copilot",
			"github.copilot-chat",
			"mechatroner.rainbow-csv"
		],
		"settings": {
			"workbench.colorTheme": "Default Dark+",
			"editor.rulers": [80],
			"workbench.iconTheme": "vs-seti"
		}
		}
	},

	"postCreateCommand": "pip install -r requirements.txt && python -m spacy download en_core_web_sm && python -m spacy download de_core_news_sm"
}